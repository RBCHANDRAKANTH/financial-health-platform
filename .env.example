# Financial Health Assessment Platform - Environment Configuration
# Copy this file to .env and update with your actual credentials

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development

# Database Configuration
DB_HOST=localhost
DB_NAME=financial_health
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_PORT=5432

# Encryption Key (Generate using: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your-encryption-key-here

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Banking API Configurations (Optional)
# HDFC Bank API
HDFC_API_BASE_URL=https://api.hdfcbank.com/v1
HDFC_CLIENT_ID=your-hdfc-client-id
HDFC_CLIENT_SECRET=your-hdfc-client-secret

# ICICI Bank API
ICICI_API_BASE_URL=https://api.icicibank.com/v1
ICICI_CLIENT_ID=your-icici-client-id
ICICI_CLIENT_SECRET=your-icici-client-secret

# GST API Configuration (Optional)
GST_API_BASE_URL=https://api.gst.gov.in
GST_APP_KEY=your-gst-app-key
GST_USERNAME=your-gst-username
GST_PASSWORD=your-gst-password

# Payment Gateway Configuration (Optional)
# Razorpay
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# PayU
PAYU_MERCHANT_KEY=your-payu-merchant-key
PAYU_MERCHANT_SALT=your-payu-merchant-salt

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=csv,xlsx,xls,pdf

# Security Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/financial_health.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Cache Configuration (Redis - Optional)
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Email Configuration (for notifications - Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=backups/

# Monitoring and Analytics
ENABLE_ANALYTICS=True
ANALYTICS_RETENTION_DAYS=90

# Industry Benchmark Data Source
BENCHMARK_DATA_SOURCE=internal
BENCHMARK_UPDATE_FREQUENCY=monthly

# AI Model Configuration
AI_MODEL_PROVIDER=openai
AI_MODEL_NAME=gpt-3.5-turbo
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# Compliance and Audit
AUDIT_LOG_ENABLED=True
AUDIT_LOG_RETENTION_DAYS=365
COMPLIANCE_CHECKS_ENABLED=True

# Multi-language Support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi
TRANSLATION_SERVICE=internal

# Performance Configuration
DATABASE_POOL_SIZE=10
DATABASE_POOL_TIMEOUT=30
API_TIMEOUT=30
ASYNC_PROCESSING=True

# Development/Testing Configuration
DEBUG=True
TESTING=False
WTF_CSRF_ENABLED=True